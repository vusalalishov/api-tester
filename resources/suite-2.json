{
  "title": "Test suite containing user management system tests",
  "label": ["suite-1"],
  "protocol": "json",
  "declare": {
    "user": {
      "name": "John",
      "surname": "Doe",
      "age": "30"
    },
    "baseUrl": "http://localhost"
  },
  "cases": [
    {
      "title": "Test if user created successfully",
      "labels": ["case-1"],
      "scenarios": [
        {
          "title": "Create user!",
          "try": {
            "method": "POST",
            "url": "http://localhost:3000/create",
            "headers": {
              "key1": [
                "value1",
                "value2"
              ],
              "key3": "value3"
            },
            "payload": "templates/create-user-payload.tpl"
          },
          "extract": {
            "user": {
              "name": "{{ .data.name }}",
              "age": "{{ .data.age }}",
              "fullname": "{{ .data.name }} {{ .data.surname }}"
            }
          },
          "verify": {
            "status": "200",
            "headers": {
              "key1": ["value1", "value2"],
              "key3": "value3"
            },
            "schema": {
              "tests": {
                "user-created.js" : "isNameCorrect",
                "user-common.js" : "isAgeCorrect"
              }
            }
          }
        },
        {
          "title": "Set user age!",
          "try": {
            "method": "POST",
            "url": "http://localhost:3000/create",
            "headers": {
              "key1": [
                "value1",
                "value2"
              ],
              "key3": "value3"
            },
            "payload": "templates/create-user-payload.tpl"
          },
          "extract": {
            "user": {
              "age": "{{ .data.age }}",
              "fullname": "{{ .data.name }} {{ .data.surname }}"
            }
          },
          "verify": {
            "status": "200",
            "headers": {
              "key1": ["value1", "value2"],
              "key3": "value3"
            },
            "schema": {
              "tests": {
                "user-created.js" : "isNameCorrect",
                "user-common.js" : "isAgeCorrect"
              }
            }
          }
        }
      ]
    }
  ]
}